@using Documents.Models
@model DocumentTypesViewModel
@{
    ViewBag.Title = "DellDocType";
}

<h2>Вы уверены что хотите удалить ?</h2>

@using (Html.BeginForm())
{
    <table class="table table-hover table-condensed">
        <tr>
            <th>Наименование документа</th>
            <th>Организация</th>
            <th>ТС</th>
        </tr>
        <tr>
            <td>@Model.Name</td>
            <td>@Model.OrgName</td>
            <td>@Model.VehicleTypeName</td>
        </tr>
    </table>
    <p>
        <input type="submit" value="Удалить" class="btn btn-primary" />
        @Html.ActionLink("Назад", "DocTypes", "Home", new { @class = "btn btn-default btn-default active" })
    </p>
}
